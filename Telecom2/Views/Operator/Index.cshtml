@model IEnumerable<Telecom2.Models.Operator>

@{
    ViewBag.Title = "Operators";
}

<h2>Операторы</h2>

<p>
   @Html.ActionLink("Создать", "Create")
</p>
<table>
    <tr>
        <th>
             Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstMidName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.OperatorID }) |
            @Html.ActionLink("Детально", "Details", new { id = item.OperatorID }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.OperatorID })
        </td>
    </tr>
}

</table>