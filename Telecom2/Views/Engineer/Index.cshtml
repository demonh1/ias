@model IEnumerable<Telecom2.Models.Engineer>

@{
    ViewBag.Title = "Engineers";
}

<h2>Инженеры</h2>

<p>
   @Html.ActionLink("Создать", "Create")
</p>
<table>
    <tr>
         <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Подразделение
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstMidName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegionNumber)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.EngineerID }) |
            @Html.ActionLink("Детально", "Details", new { id = item.EngineerID }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.EngineerID })
        </td>
    </tr>
}

</table>
